// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum EventType {
  landing_view
  cta_click
  lead_created
  webhook_event
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  contact   String
  consent   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model EventLog {
  id             String    @id @default(uuid())
  eventType      EventType
  payload        Json
  idempotencyKey String?   @unique
  createdAt      DateTime  @default(now())

  @@index([eventType])
  @@index([createdAt])
}
